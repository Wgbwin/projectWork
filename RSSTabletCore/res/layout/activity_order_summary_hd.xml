<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent" >

    <include
        android:id="@+id/tit_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/action_common_head_bar_hd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tit_bar"
        android:layout_marginLeft="@dimen/shopping_info_detail_margin"
        android:layout_marginRight="@dimen/shopping_info_detail_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/N2ROrderConfirmation_EmailTitle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />

                <TextView
                    android:id="@+id/tv_order_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shopping_info_detail_margin"
                    android:text="email address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shopping_info_detail_margin"
                    android:text="@string/N2ROrderConfirmation_OrderID"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shopping_info_detail_margin"
                    android:text="order id"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/shopping_cart_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shopping_info_detail_margin"
                    android:text="@string/N2ROrderConfirmation_OrderDate"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />

                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shopping_info_detail_margin"
                    android:text="order date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shopping_info_detail_margin"
                    android:text="@string/N2ROrderConfirmation_OrderSubtotal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />

                <TextView
                    android:id="@+id/tv_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shopping_info_detail_margin"
                    android:text="order total"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />
                
                <TextView
                    android:id="@+id/tv_taxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shopping_info_detail_margin"
                    android:text="@string/N2ROrderConfirmation_TaxesDisclaimer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shopping_info_detail_margin"
                    android:text="@string/N2ROrderConfirmation_OrderDetails"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />

                <TextView
                    android:id="@+id/tv_order_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shopping_info_detail_margin"
                    android:text="Detail"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_des_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SettingsScreen_StoreInfo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/shopping_cart_label" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_des_detail"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/shopping_info_detail_margin"
                        android:layout_weight="4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/shopping_cart_label" />

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        layout="@layout/map_view" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>