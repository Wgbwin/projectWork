<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    <include
        android:id="@+id/tit_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        layout="@layout/action_bar_head_hd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_xxhdpi"
        android:layout_below="@id/tit_bar"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip" >

            <Button
                android:id="@+id/previous_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/actionbuttonsecondary"
                android:text="@string/previous" />

            <TextView
                android:id="@+id/propmt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/yellow"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/continue_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/actionbuttonprimary"
                android:text="@string/Continue" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="260.0dip"
            android:orientation="horizontal"
            android:weightSum="21" >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="5" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="11"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100.0dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/selected_pic_action_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="55dip"
                        android:layout_gravity="left"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="27sp" 
                     />

                    <TextView
                        android:id="@+id/selected_pic_result_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="45dip"
                        android:layout_marginTop="0dip"
                        android:gravity="top"                    
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="normal" 
                        android:text="@string/imageSelNumNeedResultPrompt"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="140.0dip"
                    android:layout_marginTop="20.0dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="100.0dip"
                        android:layout_gravity="top"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/dispalyImage"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_gravity="bottom" >

                        <Button
                            android:id="@+id/magnify_button"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="top|center_horizontal"
                            android:background="@drawable/search_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="100.0dip"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2" >

                        <TextView
                            android:id="@+id/selectedNum"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/red"
                            android:textSize="23sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/selectedNumPrompt"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_gravity="top"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/photos"
                            android:singleLine="true"
                            android:textColor="@color/red"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="100.0dip"
                        android:layout_weight="3"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:weightSum="4" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1" >

                                <ImageView
                                    android:layout_width="10dip"
                                    android:layout_height="10dip"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/red_diamond" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1" >

                                <ImageView
                                    android:layout_width="10dip"
                                    android:layout_height="10dip"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/orange_diamond" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1" >

                                <ImageView
                                    android:layout_width="10dip"
                                    android:layout_height="10dip"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/chartreuse_diamond" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1" >

                                <ImageView
                                    android:layout_width="10dip"
                                    android:layout_height="10dip"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/yellow_diamond" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:orientation="vertical"
                            android:weightSum="4" >

                            <TextView
                                android:id="@+id/lackNum"
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_marginLeft="10dip"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/needNum"
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/goodNum"
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/moreNum"
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="30.0dip"
                            android:orientation="vertical"
                            android:weightSum="4" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/not_enough"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/good"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/perfect"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/busy"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.kodak.rss.tablet.view.SourcePanel
            android:id="@+id/bottomPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            panel:content="@+id/panelContent"
            panel:handle="@+id/panelHandle"
            panel:panelEditContent="@+id/panelEditContent"
            panel:position="1" >

            <View
                android:id="@+id/panelEditContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/panelHandle"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@color/black"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/previousarrow_up_xxhdpi" />

                <TextView
                    android:id="@+id/back_button_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/back_button"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textColor="@color/green"
                    android:textSize="18dip" />

                <TextView
                    android:id="@+id/source_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18dip" />

                <com.kodak.rss.tablet.view.SearchButton
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search_button" />

                <Button
                    android:id="@+id/all_delete_button"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dip"
                    android:layout_toLeftOf="@id/search_button"
                    android:background="@drawable/deselectall_button"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/all_select_button"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/all_delete_button"
                    android:background="@drawable/selectall_button"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/panelContent"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:background="@color/black" >

                <ProgressBar
                    android:id="@+id/content_pbar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <GridView
                    android:id="@+id/photoGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:scrollbars="none"
                    android:listSelector="@color/black" />
                
            </RelativeLayout>
        </com.kodak.rss.tablet.view.SourcePanel>
    </LinearLayout>

    <RelativeLayout 
	     android:id="@+id/anim_layer"
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:clickable="false"
	     android:focusable="false"
	     />
</RelativeLayout>