<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Style of the tab indicator's tabs. -->
    <declare-styleable name="Indicator">
        <attr name="tabIndicatorStyle" format="reference" />
    </declare-styleable>
    
    <!-- KM Action Bar -->
    <declare-styleable name="MActionBar">
        <attr name="title_text" format="string" />
        <attr name="title_logo" format="reference" />
        <attr name="title_gravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="left_button_image_src" format="reference"/>
        <attr name="right_button_image_src" format="reference"/>
        <attr name="right_button_text_src" format="reference" />
        <attr name="theme" format="enum">
            <enum name="light" value="0" />
            <enum name="dark" value="1" />
        </attr>
    </declare-styleable>
    
    <!-- DragableImagePanel -->
	<declare-styleable name="Panel">
		<attr name="position" format="integer">
			<flag name="top" value="0"/>
			<flag name="bottom" value="1"/>
			<flag name="left" value="2"/>
			<flag name="right" value="3"/>
		</attr>
		<attr name="panelEditContent" format="reference" />
		<attr name="handle" format="reference" />
		<attr name="content" format="reference" />
		<attr name="openedHandle" format="reference|color" />
		<attr name="closedHandle" format="reference|color" />
		<attr name="allowSingleTap" format="boolean" />
		<attr name="animateOnClick" format="boolean" />
		<attr name="orientation" format="integer">
			<flag name="vertical" value="0" />
			<flag name="horizontal" value="1" />
		</attr>
		<attr name="offsetTop" format="float" />
		<attr name="offsetBottom" format="float" />
	</declare-styleable>
	
	<declare-styleable name="KMImageView">
        <attr name="tagImageSrc" format="reference"/>
        <attr name="tagImageBackground" format="reference"/>
        <attr name="tagImageAlwaysVisible" format="boolean"></attr>
        <attr name="longClickable" format="boolean"></attr>
        <attr name="watermarkEnable" format="boolean"></attr>
        <attr name="tagImageVisible" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="4"/>
            <enum name="gone" value="8"/>
        </attr>
        
    </declare-styleable>
    
	<declare-styleable name="Carousel">
	    <attr name="flipInterval" format="float" />
	    <attr name="autoFlip" format="boolean" />
	    <attr name="pageIndicatorId" format="reference" />
	</declare-styleable>
	
	<declare-styleable name="TipBar">
	    <attr name="text" format="string|reference" />
	    <attr name="autoClose" format="boolean" />
	    <attr name="closeDelay" format="float" />
	</declare-styleable>
	
	<declare-styleable name="CarouselPageIndicator">
	    <attr name="drawable" format="reference" />
	    <attr name="size" format="integer" />
	</declare-styleable>
    
</resources>
