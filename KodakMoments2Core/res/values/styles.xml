<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Theme_light" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/warm_grey</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="Theme_dark" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <!-- ##################### common default resource ####################### -->
    <!--   font family comment
    	http://stackoverflow.com/questions/12128331/how-to-change-fontfamily-of-textview-in-android
    	android:fontFamily="sans-serif"           // roboto regular
		android:fontFamily="sans-serif-light"     // roboto light
		android:fontFamily="sans-serif-condensed" // roboto condensed
		android:fontFamily="sans-serif-thin"      // roboto thin (android 4.2)
		android:fontFamily="sans-serif-medium"    // roboto medium (android 5.0) 
		
		Added by Robin:
		Now app use custom fonts, app will set font acrroding to style name.
		For more detail, see BaseActivity.initForTextViewFactor() .
		Be careful, if you use new TextView(...), please set typeface manunally.
	-->
    <style name="h1_text">
        <item name="android:textSize">@dimen/h1_font_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    <style name="h2_text">
        <item name="android:textSize">@dimen/h2_font_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    <style name="button_text">
        <item name="android:textSize">@dimen/button_text_font_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    <style name="subheadline_text">
        <item name="android:textSize">@dimen/sub_head_line</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="navigation_text">
        <item name="android:textSize">@dimen/navigation_font_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="text_links_text">
        <item name="android:textSize">@dimen/text_links_font_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="small_button_text">
        <item name="android:textSize">@dimen/small_button_text_font_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="body_copy_text">
        <item name="android:textSize">@dimen/body_copy_font_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="tip_text">
        <item name="android:textSize">@dimen/tip_text_font_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="error_code_text">
        <item name="android:textSize">@dimen/error_code_font_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="primary_button" parent="button_text">
    </style>
    <style name="primary_button_dark_outlined" parent="primary_button">
        <item name="android:background">@drawable/selector_primary_button_dark_bg</item>
        <item name="android:textColor">@color/selector_primary_button_dark_text</item>
    </style>
    <style name="primary_button_white_box" parent="primary_button">
        <item name="android:background">@drawable/selector_primary_button_light_bg</item>
        <item name="android:textColor">@color/selector_primary_button_light_text</item>
    </style>
    <style name="primary_button_light_outlined" parent="primary_button">
        <item name="android:background">@drawable/selector_primary_button_light_outlined_bg</item>
        <item name="android:textColor">@color/selector_primary_button_light_outlined_text</item>
    </style>
    <style name="primary_button_start" parent="primary_button">
        <item name="android:background">@drawable/selector_primary_button_start_bg</item>
        <item name="android:textColor">@color/selector_primary_button_start_text</item>
    </style>
    
    <style name="secondary_button" parent="small_button_text">
    </style>
    <style name="secondary_button_light_simple" parent="secondary_button">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/selector_secondary_button_light_simple_text</item>
    </style>
    <style name="secondary_button_dark_simple" parent="secondary_button">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/selector_secondary_button_dark_simple_text</item>
    </style>
    <style name="secondary_button_light_regular" parent="secondary_button">
        <item name="android:background">@drawable/selector_secondary_button_light_regular_bg</item>
        <item name="android:textColor">@color/selector_secondary_button_light_regular_text</item>
    </style>
    <style name="secondary_button_dark_regular" parent="secondary_button">
        <item name="android:background">@drawable/selector_secondary_button_dark_regular_bg</item>
        <item name="android:textColor">@color/selector_secondary_button_dark_regular_text</item>
    </style>
    <style name="secondary_button_light_vivid" parent="secondary_button">
        <item name="android:background">@drawable/selector_secondary_button_light_vivid_bg</item>
        <item name="android:textColor">@color/selector_secondary_button_light_vivid_text</item>
    </style>
    <style name="secondary_button_dark_vivid" parent="secondary_button">
        <item name="android:background">@drawable/selector_secondary_button_dark_vivid_bg</item>
        <item name="android:textColor">@color/selector_secondary_button_dark_vivid_text</item>
    </style>
    
    <style name="text_links_h2_text_light" parent="h2_text">
        <item name="android:textColor">@color/selector_text_links_light_text</item>
    </style>
    <style name="text_links_h2_text_dark" parent="h2_text">
        <item name="android:textColor">@color/selector_text_links_dark_text</item>
    </style>
    <style name="text_links_button_text_light" parent="button_text">
        <item name="android:textColor">@color/selector_text_links_light_text</item>
    </style>
    <style name="text_links_button_text_dark" parent="button_text">
        <item name="android:textColor">@color/selector_text_links_dark_text</item>
    </style>
    <style name="text_links_navigation_light" parent="navigation_text">
        <item name="android:textColor">@color/selector_text_links_light_text</item>
    </style>
    <style name="text_links_navigation_text_dark" parent="navigation_text">
        <item name="android:textColor">@color/selector_text_links_dark_text</item>
    </style>
    <style name="text_links_simple_light" parent="text_links_text">
        <item name="android:textColor">@color/selector_text_links_light_text</item>
    </style>
    <style name="text_links_simple_dark" parent="text_links_text">
        <item name="android:textColor">@color/selector_text_links_dark_text</item>
    </style>
    <style name="text_links_body_copy_light" parent="body_copy_text">
        <item name="android:textColor">@color/selector_text_links_light_text</item>
    </style>
    <style name="text_links_body_copy_dark" parent="body_copy_text">
        <item name="android:textColor">@color/selector_text_links_dark_text</item>
    </style>
    <style name="text_links_error_code_light" parent="error_code_text">
        <item name="android:textColor">@color/near_black</item>
    </style>
    <style name="text_links_error_code_dark" parent="error_code_text">
        <item name="android:textColor">@color/kodak_yellow</item>
    </style>
    
    <style name="edit_text_light">
        <item name="android:textColor">@color/near_black</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>
    <style name="edit_text_dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>
    
    <style name="AlertDialogGeneral" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
		<item name="android:background">@null</item>
		<item name="android:windowBackground">@color/transparent</item>
		<item name="android:windowIsTranslucent">true</item>
	</style>
    <!-- #################### End for common default resource ############################# -->
    <style name="StyledIndicators" parent="Theme_light">
        <item name="tabIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="Widget"></style>
    <style name="CustomTabPageIndicator">
        <item name="android:background">@drawable/selector_tab_indicator</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabIndicator</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
           <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="TextAppearance.TabIndicator" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/selector_tab_text_button_bg</item>
    </style>
    
    <!-- Kodak Moments 2 Progress Bar -->
    <style name="KMProgressBar_Small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/km_progressbar</item>
    </style>
    
    <style name="KMProgressBar_Large" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/km_progressbar</item>
    </style>
    
    <style name="KMProgressBar_Inverse" parent="@android:style/Widget.ProgressBar.Inverse">
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/km_progressbar</item>
    </style>

</resources>
