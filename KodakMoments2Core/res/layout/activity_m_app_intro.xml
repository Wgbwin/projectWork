<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.kodakalaris.kodakmomentslib.widget.Carousel
        android:id="@+id/carousel_intro_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:pageIndicatorId="@+id/carousel_page_indicator" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="172.3dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/linear_gradient_app_inro" />

    <ImageView
        android:id="@+id/img_intro_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="38dp"
        android:clickable="true"
        android:src="@drawable/splash_animation_sm"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_intro_welcome"
        style="@style/h1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_intro_splash"
        android:layout_below="@+id/img_intro_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/KMTopScreen_Welcome1"
        android:textColor="@color/kodak_red" />

    <TextView
        android:id="@+id/txt_intro_info"
        style="@style/h2_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_intro_welcome"
        android:layout_below="@+id/txt_intro_welcome"
        android:layout_marginTop="12dp"
        android:minLines="1"
        android:text="@string/KMTopScreen_WelcomeDescription3"
        android:textColor="@color/near_black" />

    <com.kodakalaris.kodakmomentslib.widget.CarouselPageIndicator
        android:id="@+id/carousel_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_intro_info"
        android:layout_below="@+id/txt_intro_info"
        android:layout_marginTop="16dp"
        app:drawable="@drawable/intro_dots" />

    <TextView
        android:id="@+id/txt_intro_link"
        style="@style/text_links_simple_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:text="@string/KMTopScreen_LinkYourPhotos"
        android:textColor="@color/kodak_red" />

    <Button
        android:id="@+id/btn_intro_start"
        style="@style/primary_button_start"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_above="@+id/txt_intro_link"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:gravity="center"
        android:text="@string/KMTopScreen_GettingStarted" />

    <include
        android:id="@+id/relaLy_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/include_m_splash"
        />

</RelativeLayout>