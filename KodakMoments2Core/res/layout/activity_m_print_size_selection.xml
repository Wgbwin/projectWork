<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.kodakalaris.kodakmomentslib.widget.mobile.MActionBar 
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="light"
        app:left_button_image_src="@drawable/icon_back"
        app:title_text="@string/Common_Prints"
        app:title_gravity="center"
        />
    
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warm_grey"
        android:orientation="vertical" >

        <!-- Viewpage and page Index -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.kodakalaris.kodakmomentslib.widget.Carousel
                    android:id="@+id/carousel_print_size_selection"
                    android:layout_width="match_parent"
                    android:layout_height="317dp"
                    android:layout_gravity="center"
                    app:pageIndicatorId="@+id/carousel_page_indicatore"
                     />

                <com.kodakalaris.kodakmomentslib.widget.CarouselPageIndicator
                    android:id="@+id/carousel_page_indicatore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/carousel_print_size_selection"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    app:drawable="@drawable/circle"
                    />
            </RelativeLayout>

            <LinearLayout 
                android:layout_width="280.7dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                >
	            <TextView
	                android:id="@+id/txt_marketing_title"
	                style="@style/subheadline_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:layout_marginTop="32.6dp"
	                android:gravity="left"
	                android:text="High Quality Prints"
	                />
	
	            <TextView
	                android:id="@+id/txt_marketing_subtitle"
	                style="@style/body_copy_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:layout_marginTop="10.7dp"
	                android:gravity="left"
	                android:text="Glossy paper / Weight 250 gsm / Thickness 0.25 mm"
	                />
	
	            <TextView
	                android:layout_width="match_parent"
	                style="@style/h2_text"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:layout_marginTop="22dp"
	                android:gravity="left"
	                android:text="@string/PrintSize_Select_DefaultSize"
	                />
	            
				<com.kodakalaris.kodakmomentslib.widget.LinearListLayout 
				    android:id="@+id/list_size_price"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="14dp"
				    android:orientation="vertical"
				    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>