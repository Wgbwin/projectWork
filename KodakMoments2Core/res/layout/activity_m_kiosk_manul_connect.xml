<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
	<com.kodakalaris.kodakmomentslib.widget.mobile.MActionBar 
	    android:id="@+id/actionbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    app:left_button_image_src="@drawable/icon_back"
	    app:title_text="KIOSK MANUAL CONNECT"
	    />
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/actionbar"
	    android:orientation="vertical"
	    android:padding="16dp"
	    >
	    
	    <TextView 
	        style="@style/h2_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	      	android:text="Wifi Name:"
	     	android:textColor="@color/black"
	        />
	    
	    <Spinner 
	        android:id="@+id/spinner_wifi_ssid"
	        style="@style/body_copy_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        />
	    
	    <TextView 
	        style="@style/h2_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Password:"
	        />
	    
	    <EditText 
	        android:id="@+id/etxt_password"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="password"
	        android:textColor="@color/black"
	        />
	    
	    <Button 
	        android:id="@+id/btn_connect"
	        style="@style/primary_button_light_outlined"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="16dp"
	        android:text="Connect"
	        />
	</LinearLayout>
	
	<FrameLayout 
	    android:id="@+id/vgroup_pbar"
	    android:layout_below="@id/actionbar"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#7f000000"
	    android:visibility="invisible"
	    >
	    <ProgressBar 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        />
	</FrameLayout>
	
    
</RelativeLayout>
