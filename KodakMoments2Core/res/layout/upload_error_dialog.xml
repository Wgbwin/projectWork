<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView android:id="@+id/text_error_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SendingOrder_BadImages"
        
        ></TextView>

<HorizontalScrollView
    android:id="@+id/error_image_horScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_gravity="center_vertical"
     >
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_gravity="center_vertical"
        >
            <GridView android:id="@+id/error_photos_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:smoothScrollbar="true"
	        android:listSelector="#00000000"
	        android:cacheColorHint="#00000000"
             android:gravity="center" 
             android:horizontalSpacing="@dimen/list_item_space"
              >
        </GridView>
         
         
     </LinearLayout>
  
</HorizontalScrollView>
    
</LinearLayout> 
    


