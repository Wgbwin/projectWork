<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:background="@color/near_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
      <include layout="@layout/include_photo_edit_head"
           android:id="@+id/include_photo_edit_page"
      />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_photo_edit_page" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lineLy_photo_edit_container" >

            <com.kodakalaris.kodakmomentslib.widget.mobile.ZoomRelativeLayout
                android:id="@+id/realLy_photo_edit_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:layout_above="@+id/lineLy_photo_edit_filter_container">

                <com.kodakalaris.kodakmomentslib.widget.mobile.ZoomImageView
                    android:id="@+id/img_photo_edit_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </com.kodakalaris.kodakmomentslib.widget.mobile.ZoomRelativeLayout>
           
            <LinearLayout
	        android:id="@+id/lineLy_photo_edit_filter_container"
	        android:layout_width="match_parent"
	        android:orientation="vertical"
	        android:layout_alignParentBottom="true"
	        android:visibility="gone"
	        android:layout_height="wrap_content" >
                 <RelativeLayout
                      android:id="@+id/realLy_photo_edit_pinkish_filter"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" >
			           <Gallery
			                android:id="@+id/gallery_photo_edit_pinkish_filter"
			                android:layout_width="match_parent"
			                android:spacing="3dp"
			                android:gravity="center"
			                android:layout_height="wrap_content" /> 
			         	<TextView
				             android:id="@+id/txt_item_photo_filter_selecter"
				             android:layout_width="58dp"
				             android:layout_height="4dp"
				             android:layout_alignBottom="@+id/gallery_photo_edit_pinkish_filter"
				             android:layout_centerHorizontal="true"
				             android:background="@color/kodak_yellow" />
    			</RelativeLayout>
            	 <TextView
			        android:id="@+id/txt_item_photo_filter_picturename"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:textColor="@color/white"/>
	        </LinearLayout>
	        
            <RelativeLayout
          	    android:id="@+id/realLy_photo_edit_container_crop"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" 
			    android:visibility="gone">
                
			    <com.kodakalaris.kodakmomentslib.widget.mobile.ImageCropSurfaceView
		            android:id="@+id/img_photo_edit_crop_picture"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />
	    
			</RelativeLayout>
			<!-- <ProgressBar 
	        android:id="@+id/progressbar_photo_edit_wait"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/KMProgressBar_Inverse"
	        android:visibility="gone"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"/> -->
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lineLy_photo_edit_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_photo_edit_rotate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/selector_photo_edit_rotate" />

            <ImageView
                android:id="@+id/img_photo_edit_crop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:src="@drawable/selector_photo_edit_crop" />

            <ImageView
                android:id="@+id/img_photo_edit_redeye"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:src="@drawable/selector_photo_edit_redeye" />

            <ImageView
                android:id="@+id/img_photo_edit_filters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:src="@drawable/selector_photo_edit_filters" />

            <ImageView
                android:id="@+id/img_photo_edit_levels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:src="@drawable/selector_photo_edit_levels" />
        </LinearLayout>
        
    </RelativeLayout>
     <RelativeLayout
          android:id="@+id/progressbar_photo_edit_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:visibility="gone"
         android:clickable="true"
        android:background="#0000" >
        <ProgressBar 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/KMProgressBar_Inverse"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    </RelativeLayout>
