<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <com.kodakalaris.kodakmomentslib.widget.mobile.KMAlbumCoverView 
        android:id="@+id/image_album_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/contentDescription"
        android:scaleType="centerCrop"
        />
     <LinearLayout 
         android:id="@+id/linear_album_info"
         android:layout_width="match_parent"
         android:layout_height="100dp"
         android:orientation="vertical"
         android:layout_alignBottom="@+id/image_album_cover"
         android:gravity="center_horizontal|bottom"
         android:background="@drawable/shape_black_gradient"
         >
         <TextView android:id="@+id/text_album_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             style="@style/h1_text"
             android:textColor="@color/white"
             android:text="album"
             ></TextView>
         
          <TextView android:id="@+id/text_album_count"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             style="@style/h2_text"
             android:textColor="@color/white"
             android:text="number"
             ></TextView>
              
         
         
     </LinearLayout>
</RelativeLayout>
