<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="283.1dp"
        android:layout_height="64.7dp"
        android:layout_centerInParent="true"
        android:background="@color/white_50alpha" >

        <TextView
            android:id="@+id/txt_order_date"
            style="@style/small_button_text"
            android:layout_width="222.7dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.3dp"
            android:layout_marginTop="13.3dp"
            android:textColor="@color/near_black" />

        <TextView
            android:id="@+id/txt_order_id"
            style="@style/subheadline_text"
            android:layout_width="222.7dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_order_date"
            android:layout_marginLeft="15.3dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/near_black" />

        <ImageButton
            android:id="@+id/ibtn_order_preview"
            android:layout_width="36.7dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/icon_forward_chevron" />
    </RelativeLayout>

</RelativeLayout>