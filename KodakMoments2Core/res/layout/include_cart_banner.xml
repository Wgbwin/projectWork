<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:background="@color/kodak_red_85alpha"
    >
	
    <TextView 
        android:id="@+id/txt_cart_not_empty"
        style="@style/tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_centerInParent="true"
        android:text="@string/KMProductChoice_CartBannerTitle"
        android:textColor="@color/white"
        />
    
    <ImageView
        android:layout_width="26.7dp"
        android:layout_height="26.7dp"
        android:layout_marginRight="5.3dp"
        android:layout_toLeftOf="@id/txt_cart_not_empty"
        android:layout_marginTop="4dp"
        android:background="@drawable/icon_cart_zoom" />

</RelativeLayout>
