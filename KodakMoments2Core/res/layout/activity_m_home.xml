<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <!-- jocker chen -->

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout_home"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ListView
                android:id="@+id/lisv_home_products"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="@android:color/transparent"
                android:listSelector="@color/transparent"
                android:divider="@null" >
            </ListView>

            <com.kodakalaris.kodakmomentslib.widget.mobile.MActionBar
                android:id="@+id/actionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_button_image_src="@drawable/icon_hamburger_menu"
                app:right_button_image_src="@drawable/icon_capture"
                app:title_logo="@drawable/logo_kodakmoments" />
            
            <include
                android:id="@+id/relaLy_cart_banner"
                android:layout_width="match_parent"
            	android:layout_height="wrap_content"
                android:layout_below="@+id/actionbar"
                layout="@layout/include_cart_banner"
                />
        </RelativeLayout>

        <include
            android:layout_width="288dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            layout="@layout/activity_m_home_sidemenufields" />
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>