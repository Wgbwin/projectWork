<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:km="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@color/warm_grey">
   
    <com.kodakalaris.kodakmomentslib.widget.mobile.KMImageView
        android:id="@+id/image01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        km:tagImageSrc="@drawable/icon_select_image"
        km:tagImageBackground="@color/warm_grey"
        km:longClickable="true"
        km:tagImageVisible="gone"
        ></com.kodakalaris.kodakmomentslib.widget.mobile.KMImageView>
     <com.kodakalaris.kodakmomentslib.widget.mobile.KMImageView
        android:id="@+id/image02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_space"
        km:tagImageSrc="@drawable/icon_select_image"
        km:tagImageBackground="@color/warm_grey"
        km:longClickable="true"
        km:tagImageVisible="gone"
        ></com.kodakalaris.kodakmomentslib.widget.mobile.KMImageView>
      <com.kodakalaris.kodakmomentslib.widget.mobile.KMImageView
        android:id="@+id/image03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_space"
        km:tagImageSrc="@drawable/icon_select_image"
        km:tagImageBackground="@color/warm_grey"
        km:longClickable="true"
        km:tagImageVisible="gone"
        ></com.kodakalaris.kodakmomentslib.widget.mobile.KMImageView>
       <com.kodakalaris.kodakmomentslib.widget.mobile.KMImageView
        android:id="@+id/image04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_space"
        km:tagImageSrc="@drawable/icon_select_image"
        km:tagImageBackground="@color/warm_grey"
        km:longClickable="true"
        km:tagImageVisible="gone"
        ></com.kodakalaris.kodakmomentslib.widget.mobile.KMImageView>
    
    

</LinearLayout>
