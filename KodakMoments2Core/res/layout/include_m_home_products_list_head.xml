<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lineLy_home_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.kodakalaris.kodakmomentslib.widget.Carousel
            android:id="@+id/carousel_home_productPage"
            android:layout_width="match_parent"
            android:layout_height="316.7dp"
            app:pageIndicatorId="@+id/carousel_page_indicator"
             />

        <RelativeLayout
            android:id="@+id/relaLy_home_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warm_grey"
            android:orientation="vertical" >

            <com.kodakalaris.kodakmomentslib.widget.CarouselPageIndicator 
	            android:id="@+id/carousel_page_indicator"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            app:drawable="@drawable/circle"
	            android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
	            />

            <TextView
                android:id="@+id/txt_carousel_title"
                style="@style/h1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carousel_page_indicator"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text=""
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/near_black" />

            <TextView
                android:id="@+id/txt_carousel_subtitle"
                style="@style/body_copy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_carousel_title"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text=""
                android:textColor="@color/grey" />

            <Button
                android:id="@+id/btn_carousel_action"
                style="@style/primary_button_white_box"
                android:layout_width="281.4dp"
                android:layout_height="46.7dp"
                android:layout_below="@+id/txt_carousel_subtitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27.3dp"
                android:text="" />

            <TextView
                android:id="@+id/tex_home_4"
                style="@style/h2_text"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/btn_carousel_action"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="42.7dp"
                android:gravity="center"
                android:text="@string/HomeScreen_More_Kodak_Products" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>