<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:km="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.kodakalaris.kodakmomentslib.widget.mobile.KMImageView
        android:id="@+id/kiv_thumb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY" 
        km:tagImageSrc="@drawable/icon_deselect_image"
        km:tagImageBackground="@color/warm_grey"
        km:tagImageAlwaysVisible="true"
        km:tagImageVisible="visible"
        km:watermarkEnable="true"
        />

</RelativeLayout>