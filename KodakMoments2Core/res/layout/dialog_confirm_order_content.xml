<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TextView 
	    style="@style/h2_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/ShoppingCart_dialog_confirm_order_head"
	    android:layout_marginTop="12dp"
	    />
	
	<TextView 
	    android:id="@+id/txt_address"
	    style="@style/subheadline_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="address\naddress\naddress"
	    />
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="16dp"
	    android:orientation="horizontal"
	    >
	    <CheckBox 
	        android:id="@+id/chkb_send_email"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:button="@drawable/selector_check_box"
	        android:checked="true"
	        />
	    
	    <TextView 
	        style="@style/tip_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="32dp"
	        android:text="@string/ShoppingCart_dialog_confirm_order_send_email"
	        />
	</LinearLayout>
	
</LinearLayout>
