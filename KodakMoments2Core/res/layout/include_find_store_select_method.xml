<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="253.67dp"
    android:layout_height="80.34dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="30dp"
    android:background="@drawable/select_method" >

    <TextView
        android:id="@+id/tv_findStore_methodType"
        style="@style/text_links_text"
        android:layout_width="match_parent"
        android:layout_height="39.83dp"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="@string/FindStore_selectDeliveryMethod"
        android:textColor="@color/near_black" />

    <View
        android:id="@+id/view_findStore_line"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_below="@+id/tv_findStore_methodType"
        android:background="@color/near_white" />

    <Button
        android:id="@+id/btn_findStore_methodSelection"
        style="@style/text_links_text"
        android:layout_width="match_parent"
        android:layout_height="39.83dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view_findStore_line"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="@string/FindStore_pickUpInStore"
        android:textColor="@color/kodak_red" />

</RelativeLayout>