<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:actionbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

     <com.kodakalaris.kodakmomentslib.widget.mobile.MActionBar 
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        actionbar:theme="light"
        actionbar:left_button_image_src="@drawable/icon_back"
        actionbar:title_text="@string/Common_Prints"
        />

    <RelativeLayout
        android:id="@+id/relativelayout_imageselection_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar" >

        <com.kodakalaris.kodakmomentslib.widget.TabPageIndicator
            android:id="@+id/tab_imageselection_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
           >
        </com.kodakalaris.kodakmomentslib.widget.TabPageIndicator>
        
        <ImageView
            android:id="@+id/gradient_image_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gradient_black"
            android:layout_alignTop="@+id/tab_imageselection_indicator"
            android:layout_alignBottom="@+id/tab_imageselection_indicator"
            ></ImageView>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_imageselection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_imageselection_indicator" 
            >
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_imageselection_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@color/warm_grey"
        android:visibility="gone" >
    </RelativeLayout>
    
    <View android:id="@+id/v_disable_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/near_black_70alpha"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />
    
    <include android:id="@+id/include_image_tray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_m_image_panel"
        android:layout_below="@+id/title_bar"/>
    
    <RelativeLayout
        android:id="@+id/relative_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone"
        style="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
         >

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@string/contentDescription"/>
</RelativeLayout>
   

</RelativeLayout>
