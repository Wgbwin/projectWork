<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_splash"
    tools:context="com.kodakalaris.kodakmomentslib.activity.SplashActivity" >

    <ImageView
        android:id="@+id/img_splash_animation"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="139dp"
        android:src="@drawable/splash_animation"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_splash_Moments"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_splash_animation"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/splash_moments"
        android:textColor="@color/dark_grey"
        android:textSize="45sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_splash_from"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_splash_animation"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="262dp"
        android:gravity="center"
        android:text="@string/from"
        android:textSize="18sp"
        android:textColor="@color/white" 
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/kodak_moments"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_splash_from"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/logo_kodakmoments_redwhite" />

    <ProgressBar 
        android:id="@+id/prob_splash"
        style="@style/KMProgressBar_Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        />
</RelativeLayout>