<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_90alpha"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- Button -->

        <RelativeLayout
            android:layout_width="@dimen/menu_item_width"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginLeft="@dimen/menu_item_margin_left" >

            <ImageButton
                android:id="@+id/ibtn_home_close_slideMenun"
                android:layout_width="@dimen/menu_item_icon_size"
                android:layout_height="@dimen/menu_item_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/icon_hamburger_menu_sel" />
        </RelativeLayout>

        <!-- Cart -->

        <RelativeLayout
            android:id="@+id/relaLy_slidemenu_cart"
            android:layout_width="@dimen/menu_item_width"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginLeft="@dimen/menu_item_margin_left" >

            <ImageView
                android:id="@+id/img_slidemenu_cart"
                android:layout_width="@dimen/menu_item_icon_size"
                android:layout_height="@dimen/menu_item_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/icon_home" />

            <TextView
                android:id="@+id/txt_slidemenu_cart"
                style="@style/h2_text"
                android:layout_width="@dimen/menu_item_txt_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
                android:layout_toRightOf="@id/img_slidemenu_cart"
                android:gravity="center_vertical"
                android:text="@string/KMMenu_Cart"
                android:textColor="@color/near_black" />
        </RelativeLayout>

        <!-- Orders -->

        <RelativeLayout
            android:id="@+id/relaLy_slidemenu_orders"
            android:layout_width="@dimen/menu_item_width"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginLeft="@dimen/menu_item_margin_left" >

            <ImageView
                android:id="@+id/img_slidemenu_orders"
                android:layout_width="@dimen/menu_item_icon_size"
                android:layout_height="@dimen/menu_item_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/icon_orders" />

            <TextView
                android:id="@+id/txt_slidemenu_orders"
                style="@style/h2_text"
                android:layout_width="@dimen/menu_item_txt_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
                android:layout_toRightOf="@id/img_slidemenu_orders"
                android:gravity="center_vertical"
                android:text="@string/KMMenu_Orders"
                android:textColor="@color/near_black" />
        </RelativeLayout>

        <!-- Profile -->

        <RelativeLayout
            android:id="@+id/relaLy_slidemenu_profile"
            android:layout_width="@dimen/menu_item_width"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginLeft="@dimen/menu_item_margin_left" >

            <ImageView
                android:id="@+id/img_slidemenu_profile"
                android:layout_width="@dimen/menu_item_icon_size"
                android:layout_height="@dimen/menu_item_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/icon_profile" />

            <TextView
                android:id="@+id/txt_slidemenu_profile"
                style="@style/h2_text"
                android:layout_width="@dimen/menu_item_txt_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
                android:layout_toRightOf="@id/img_slidemenu_profile"
                android:gravity="center_vertical"
                android:text="@string/KMMenu_Profile"
                android:textColor="@color/near_black" />
        </RelativeLayout>

        <!-- Settings -->

        <RelativeLayout
            android:id="@+id/relaLy_slidemenu_settings"
            android:layout_width="@dimen/menu_item_width"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginLeft="@dimen/menu_item_margin_left" >

            <ImageView
                android:id="@+id/img_slidemenu_settings"
                android:layout_width="@dimen/menu_item_icon_size"
                android:layout_height="@dimen/menu_item_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/icon_settings" />

            <TextView
                android:id="@+id/txt_slidemenu_settings"
                style="@style/h2_text"
                android:layout_width="@dimen/menu_item_txt_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
                android:layout_toRightOf="@id/img_slidemenu_settings"
                android:gravity="center_vertical"
                android:text="@string/Common_Settings"
                android:textColor="@color/near_black" />
        </RelativeLayout>

        <!-- Clear Cart -->

        <RelativeLayout
            android:id="@+id/relaLy_slidemenu_clearcart"
            android:layout_width="@dimen/menu_item_width"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginLeft="@dimen/menu_item_margin_left" >

            <ImageView
                android:id="@+id/img_slidemenu_clearcart"
                android:layout_width="@dimen/menu_item_icon_size"
                android:layout_height="@dimen/menu_item_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/icon_deselect_image" />

            <TextView
                android:id="@+id/txt_slidemenu_clearcart"
                style="@style/h2_text"
                android:layout_width="@dimen/menu_item_txt_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
                android:layout_toRightOf="@id/img_slidemenu_clearcart"
                android:gravity="center_vertical"
                android:text="@string/KMMenu_ClearCart"
                android:textColor="@color/near_black" />
        </RelativeLayout>

        <!-- Gallary -->

        <RelativeLayout
            android:id="@+id/relaLy_slidemenu_gallery"
            android:layout_width="@dimen/menu_item_width"
            android:layout_height="@dimen/menu_item_height"
            android:layout_marginLeft="@dimen/menu_item_margin_left" >

            <ImageView
                android:id="@+id/img_slidemenu_gallery"
                android:layout_width="@dimen/menu_item_icon_size"
                android:layout_height="@dimen/menu_item_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/icon_gallery" />

            <TextView
                android:id="@+id/txt_slidemenu_gallery"
                style="@style/h2_text"
                android:layout_width="@dimen/menu_item_txt_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
                android:layout_toRightOf="@id/img_slidemenu_gallery"
                android:gravity="center_vertical"
                android:text="@string/KMMenu_Gallery"
                android:textColor="@color/near_black" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>