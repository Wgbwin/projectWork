<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Last Store Used -->

    <RelativeLayout
        android:id="@+id/realLy_MenuSetting_defautlStore"
        android:layout_width="@dimen/menu_item_width"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginLeft="@dimen/menu_item_margin_left"
        android:layout_marginTop="15.3dp" >

        <ImageView
            android:id="@+id/img_MenuSetting_defautlStore"
            android:layout_width="@dimen/menu_item_icon_size"
            android:layout_height="@dimen/menu_item_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_location" />

        <TextView
            android:id="@+id/txt_MenuSetting_defautlStore"
            style="@style/h2_text"
            android:layout_width="@dimen/menu_item_txt_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
            android:layout_toRightOf="@id/img_MenuSetting_defautlStore"
            android:gravity="center_vertical"
            android:text="@string/Settings_LastStoreUsed"
            android:textColor="@color/near_black" />
    </RelativeLayout>

    <!-- Country -->

    <RelativeLayout
        android:id="@+id/realLy_MenuSetting_Country"
        android:layout_width="@dimen/menu_item_width"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginLeft="@dimen/menu_item_margin_left"
        android:layout_marginTop="15.3dp" >

        <ImageView
            android:id="@+id/img_MenuSetting_Country"
            android:layout_width="@dimen/menu_item_icon_size"
            android:layout_height="@dimen/menu_item_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_country" />

        <TextView
            android:id="@+id/txt_MenuSetting_Country"
            style="@style/h2_text"
            android:layout_width="@dimen/menu_item_txt_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
            android:layout_toRightOf="@id/img_MenuSetting_Country"
            android:gravity="center_vertical"
            android:text="@string/Settings_country"
            android:textColor="@color/near_black" />
    </RelativeLayout>

    <!-- Legal -->

    <RelativeLayout
        android:id="@+id/realLy_MenuSetting_Legal"
        android:layout_width="@dimen/menu_item_width"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginLeft="@dimen/menu_item_margin_left"
        android:layout_marginTop="15.3dp" >

        <ImageView
            android:id="@+id/img_MenuSetting_Legal"
            android:layout_width="@dimen/menu_item_icon_size"
            android:layout_height="@dimen/menu_item_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_legal" />

        <TextView
            android:id="@+id/txt_MenuSetting_Legal"
            style="@style/h2_text"
            android:layout_width="@dimen/menu_item_txt_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
            android:layout_toRightOf="@id/img_MenuSetting_Legal"
            android:gravity="center_vertical"
            android:text="@string/Settings_legal"
            android:textColor="@color/near_black" />
    </RelativeLayout>

    <!-- About -->

    <RelativeLayout
        android:id="@+id/realLy_MenuSetting_About"
        android:layout_width="@dimen/menu_item_width"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginLeft="@dimen/menu_item_margin_left"
        android:layout_marginTop="15.3dp" >

        <ImageView
            android:id="@+id/img_MenuSetting_About"
            android:layout_width="@dimen/menu_item_icon_size"
            android:layout_height="@dimen/menu_item_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_about" />

        <TextView
            android:id="@+id/txt_MenuSetting_About"
            style="@style/h2_text"
            android:layout_width="@dimen/menu_item_txt_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/menu_item_txt_margin_left"
            android:layout_toRightOf="@id/img_MenuSetting_About"
            android:gravity="center_vertical"
            android:textColor="@color/near_black"
            android:text="@string/KMMenu_About" />
    </RelativeLayout>

</LinearLayout>
