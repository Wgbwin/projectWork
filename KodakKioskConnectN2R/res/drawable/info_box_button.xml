<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item
        android:state_pressed="true" android:drawable="@+drawable/back_button">

    </item>

    <!-- focused -->
    <item
        android:state_focused="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            
            <gradient
                android:angle="270"
                android:type="linear"
                android:startColor="#00000000"
                android:endColor="#aa000000" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            
            <gradient
                android:angle="270"
                android:type="linear"
                android:startColor="#00000000"
                android:endColor="#77000000" />
        </shape>
    </item>

</selector>