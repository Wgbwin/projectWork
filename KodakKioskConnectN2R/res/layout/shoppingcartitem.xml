<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:maxHeight="65dp"
    android:minHeight="65dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/quantityMinusButton"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/productPreviewImageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Image"
            android:maxHeight="65dp"
            android:minHeight="65dp"
            android:minWidth="65dp"
            android:src="@drawable/placeholder" />
    </LinearLayout>

    <TextView
        android:id="@+id/productPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/deleteButton"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textSize="18sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/delete_button"
        android:maxWidth="35dp"
        android:minHeight="35dp"
        android:minWidth="35dp"
        android:text="" />

    <TextView
        android:id="@+id/productQuantityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/quantityPlusButton"
        android:layout_weight="0.53"
        android:gravity="center"
        android:text="1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/productSizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="48dp"
        android:layout_toLeftOf="@+id/productQuantityTextView"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textSize="18dp"
        android:visibility="gone" />

    <!--
         <Button
	        android:id="@+id/editButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="25dp"
	        android:layout_toLeftOf="@+id/deleteButton"
	        android:background="@drawable/edit_button"
	        android:minHeight="65dp"
	        android:minWidth="35dp" />
    -->

    <TextView
        android:id="@+id/changeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/deleteButton"
        android:text="@string/shoppting_cart_change"
        android:textColor="#324F85"
        android:textSize="16dp" />

    <Button
        android:id="@+id/quantityMinusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/productQuantityTextView"
        android:background="@drawable/down_button"
        android:minHeight="65dp"
        android:minWidth="35dp"
        android:text="" />

    <Button
        android:id="@+id/quantityPlusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView2"
        android:background="@drawable/up_button"
        android:minHeight="65dp"
        android:minWidth="35dp"
        android:text="" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/changeTV"
        android:contentDescription="@string/Image"
        android:minHeight="65dp"
        android:minWidth="1dp"
        android:src="@drawable/dividervertical" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:src="@drawable/alertsmall" />

</RelativeLayout>