<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_photos_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical" >

    <include layout="@layout/activity_select_photos_drag_shadow_view" />

    <RelativeLayout
        android:id="@+id/my_stories_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingBottom="35dp" >

        <com.kodakalaris.video.two_way_grid_view.TwoWayGridView
            android:id="@+id/my_stories_project_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/my_stories_new_project"
            android:layout_alignParentTop="true"
            android:paddingBottom="35dp"
            app:horizontalSpacing="2dp"
            app:verticalSpacing="2dp"
            app:numColumns="2"
            app:numRows="2" />

        <RelativeLayout
            android:id="@+id/my_stories_first_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/my_stories_first_time_image_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                
                android:src="@drawable/tms_graphic_highres" />

            <TextView
                android:id="@+id/my_stories_text"
                android:layout_alignBottom="@id/my_stories_first_time_image_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:gravity="center_horizontal"
                android:textSize="45dp"
                android:text="@string/TMS_mainmenu_tellmystory_text" />
        </RelativeLayout>

        <include
            android:id="@+id/my_stories_new_project"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            layout="@layout/bottom_newstory" />
    </RelativeLayout>

</RelativeLayout>