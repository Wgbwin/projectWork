<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigationbar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navigationbarbackground"
    android:minHeight="@dimen/head_min_height"
    android:minWidth="@dimen/head_min_width" >

    <Button
        android:id="@+id/slideMenuOpen_btn"
        android:layout_width="@dimen/head_min_height"
        android:layout_height="@dimen/head_min_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/hamburger"
        android:visibility="visible" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/next_button"
        android:text="@string/next"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/head_min_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/Image"
        android:src="@drawable/logokodaksmall"
        android:visibility="invisible" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/slideMenuOpen_btn"
        android:background="@drawable/back_button"
        android:text="@string/Back"
        android:textColor="@color/btn_text"
        android:visibility="invisible" />
    <Button
        android:id="@+id/continue_btn"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/slideMenuOpen_btn"
        android:background="@drawable/back_button"
        android:gravity="center"
        android:text="@string/N2RShoppingCart_MakeMore"
        android:textColor="#3C3C3C"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/headerBar_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#c2c2c2"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="15"
       
       />

    <LinearLayout
        android:id="@+id/album_tex_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/slideMenuOpen_btn"
        android:layout_alignTop="@+id/slideMenuOpen_btn"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/next_btn"
        android:layout_toRightOf="@+id/back_btn"
        android:visibility="visible" >

        <TextView
            android:id="@+id/albums_sum_tex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/albums"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/item_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/totalSelected_tex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/yellow"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>