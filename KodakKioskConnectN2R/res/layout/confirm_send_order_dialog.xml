<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/boxconfirm"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/confirmSendOrder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:text="@string/sendYourOrderTo"
            android:textColor="#c2c2c2"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/confirmSendOrder_bottom"
            android:layout_below="@id/confirmSendOrder_title"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/confirmSendOrder_homeDeliveryLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/confirmSendOrder_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" 
                          android:text="fristName"/>

                    <TextView
                        android:id="@+id/confirmSendOrder_add1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" 
                          android:text="fristName"/>

                    <TextView
                        android:id="@+id/confirmSendOrder_add2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" 
                          android:text="fristName"/>

                    <TextView
                        android:id="@+id/confirmSendOrder_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                          android:text="fristName" />

                    <TextView
                        android:id="@+id/confirmSendOrder_zipeCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" 
                          android:text="fristName"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/confirmSendOrder_StoreLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/confirmSendOrder_storeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="fristName"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/confirmSendOrder_storeAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/confirmSendOrder_cityAndZipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/confirmSendOrder_postalCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/confirmSendOrder_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/confirmSendOrder_positiveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/yes"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/confirmSendOrder_negativeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/no"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>