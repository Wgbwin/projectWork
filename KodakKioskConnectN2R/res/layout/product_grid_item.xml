<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/photobookpanel_xxhdpi"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp" >

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/image_collage_product_icon_size"
        android:layout_height="@dimen/image_collage_product_icon_size"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/prints_product" />

    <TextView
        android:id="@+id/product_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/product_image"
        android:layout_alignRight="@+id/product_image"
        android:layout_below="@+id/product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:minLines="2"
        android:text="@string/product_prints"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="true" />

</RelativeLayout>
