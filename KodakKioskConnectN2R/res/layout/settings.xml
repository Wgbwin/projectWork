<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fieldsbackground"
    android:orientation="vertical" >

    <include
        android:id="@+id/navigationbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/navigationbar"
        android:focusable="false" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.8"
        android:scrollbarFadeDuration="2000000"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbarvertical" >


        <LinearLayout
            android:id="@+id/scrollViewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="vertical" >
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                
                <TextView 
                    android:id="@+id/versionCopyrightTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:visibility="gone"/>
                    
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:focusable="false" >

                <TextView
                    android:id="@+id/defaultPrintSizeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:text="@string/defaultprintsize"
                    android:textColor="#FBBA06"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/printSizeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdownsmall_button"
                    android:text="4x6"
                    android:textColor="#c2c2c2" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/contactInfoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:focusable="false"
                    android:text="@string/yourInfo"
                    android:textColor="#FBBA06"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/requiredTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:focusable="false"
                    android:gravity="right"
                    android:text="@string/required"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:text="@string/name"
                android:textColor="#c2c2c2"
                android:textSize="18dp" />

            <LinearLayout
                android:id="@+id/nameLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/firstNameBullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/bullet" />

                <EditText
                    android:id="@+id/firstNameEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/first"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:paddingRight="10dp"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/lastNameBullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/bullet" />

                <EditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/last"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:paddingRight="10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/phoneTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:text="@string/phone"
                android:textColor="#c2c2c2"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/phoneBullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/bullet" />

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/phone"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:paddingRight="10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/emailTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="@string/email"
                android:textColor="#c2c2c2"
                android:textSize="18dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >


                <ImageView
                    android:id="@+id/emailBullet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/bullet" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:paddingRight="10dp"
                    android:singleLine="true" />
            </LinearLayout>

			<LinearLayout
                android:id="@+id/automaticUpload2AlbumsSettingsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
	            <TextView
	                android:id="@+id/WMCAutoUploadTV"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:focusable="false"
	                android:text="@string/share_settings"
	                android:textColor="#FBBA06"
	                android:textSize="18dp"
	                android:visibility="visible" />
	
	            <TextView
	                android:id="@+id/autoUploadEmailTV"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:drawablePadding="5dp"
	                android:focusable="false"
	                android:text="@string/share_account_address"
	                android:textColor="#c2c2c2"
	                android:textSize="18dp" />
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" >
	
	                <ImageView
	                    android:id="@+id/shareEmailBullet"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center"
	                    android:layout_weight="1"
	                    android:src="@drawable/bullet" />
	
	                <EditText
	                    android:id="@+id/autoUploadEmailEditText"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:layout_marginRight="10dp"
	                    android:layout_weight="1"
	                    android:ems="10"
	                    android:hint="@string/email_hint"
	                    android:inputType="textEmailAddress"
	                    android:paddingRight="10dp"
	                    android:singleLine="true"/>
	            </LinearLayout>
	
	            <TextView
	                android:id="@+id/autoUploadPasswordTV"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:drawablePadding="5dp"
	                android:text="@string/password"
	                android:textColor="#c2c2c2"
	                android:textSize="18dp" />
	
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1" >
	
	
	                <ImageView
	                    android:id="@+id/sharePwdBullet"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center"
	                    android:layout_weight="1"
	                    android:src="@drawable/bullet" />
	
	                <EditText
	                    android:id="@+id/autoUploadPasswordEditText"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:layout_marginRight="10dp"
	                    android:layout_weight="1"
	                    android:ems="10"
	                    android:hint="@string/password_hint"
	                    android:paddingRight="10dp"
	                    android:singleLine="true" 
	                    android:password="true"/>
	            </LinearLayout>
	            
	
	            <LinearLayout
	                android:id="@+id/automaticUpload2AlbumsSettings"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:layout_marginTop="5dp"
	                android:orientation="vertical">
	
	                <TextView
	                    android:id="@+id/automaticUploadSettingsTV"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:layout_marginTop="5dp"
	                    android:focusable="false"
	                    android:text="@string/automaticUpload2Albums"
	                    android:textColor="#FBBA06"
	                    android:textSize="18dp"
	                    android:textStyle="bold" />
	
	                <CheckBox
	                    android:id="@+id/automaticUploadSettingsCB"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="15dp"
	                    android:button="@drawable/checkbox_button"
	                    android:text="@string/automaticUpload2AlbumsCheckBox"
	                    android:textColor="#c2c2c2"
	                    android:textSize="18dp" >
	                </CheckBox>
	            </LinearLayout>
            </LinearLayout>

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                layout="@layout/setupstorewidget"
                android:focusable="false" />

            <TextView
                android:id="@+id/sendOnlyTaggedTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/sendonlytaggedtitle"
                android:textColor="#FBBA06"
                android:textSize="18dp" 
                android:visibility="gone">
            </TextView>

            <CheckBox
                android:id="@+id/sendOnlyTaggedCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:button="@drawable/checkbox_button"
                android:text="@string/sendonlytagged"
                android:textColor="#c2c2c2"
                android:textSize="18dp" 
                android:visibility="gone">
            </CheckBox>

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                layout="@layout/previousorderswidget"
                android:focusable="false" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>