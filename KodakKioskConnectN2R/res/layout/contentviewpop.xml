<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutpop"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/txt_storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="13dp" />
    
    <TextView 
        android:id="@+id/txt_storedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_below="@+id/txt_storename"
       	 android:textSize="13dp"
       	android:layout_alignLeft="@+id/txt_storename" />
    
    <TextView 
        android:id="@+id/txt_storedetail_seline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/txt_storedetail"
         android:textSize="13dp"
       	android:layout_alignLeft="@+id/txt_storename" />
    
    <TextView 
        android:id="@+id/txt_storedetail_thline" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_storedetail_seline"
         android:textSize="13dp"
        android:layout_alignLeft="@+id/txt_storename" />
    
</RelativeLayout>
