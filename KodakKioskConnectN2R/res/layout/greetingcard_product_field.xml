<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1a1a1a" >

    <com.kodak.kodak_kioskconnect_n2r.greetingcard.ZoomableRelativeLayout
        android:id="@+id/layout_right"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="#1a1a1a"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/secondLayout"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:background="@drawable/image_wait_4x6"
            android:orientation="vertical" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/firstLayout"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:background="@drawable/image_wait_4x6"
            android:orientation="vertical" />
    </com.kodak.kodak_kioskconnect_n2r.greetingcard.ZoomableRelativeLayout>

    <LinearLayout
        android:id="@+id/buttonModelOneLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/bt_one"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/bt_two"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/bt_three"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/bt_four"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/page_view"
        android:background="@drawable/imagewait60x60"
        android:visibility="gone" />

</RelativeLayout>