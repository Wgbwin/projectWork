<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:baselineAligned="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/fieldsbackground"  >
    
    <RelativeLayout
        android:id="@+id/progressbarLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >
        <ProgressBar
	    android:id="@+id/progressBar1"
	    style="?android:attr/progressBarStyleLarge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true" />
    </RelativeLayout>
    
	<GridView android:id="@+id/picturesGrid" android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fastScrollEnabled="false" android:columnWidth="@dimen/image_thumbnail_size"
   		android:horizontalSpacing="@dimen/image_thumbnail_spacing"
    	android:numColumns="auto_fit"
    	android:stretchMode="columnWidth"
   	 	android:verticalSpacing="@dimen/image_thumbnail_spacing" 
		android:background="#00000000"
		android:cacheColorHint="#00000000"
		android:layout_gravity="center_horizontal"
		android:smoothScrollbar="true"
		android:scrollbarStyle="outsideOverlay"
		android:scrollbarThumbVertical="@drawable/scrollbarvertical"
		android:scrollbarDefaultDelayBeforeFade="500"
		android:visibility="gone" />
		
</LinearLayout>

