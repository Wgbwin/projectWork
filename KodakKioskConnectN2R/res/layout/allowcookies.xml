<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fieldsbackground" >

    <include
        android:id="@+id/navigationbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/navigationbar"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/navigationbar"
        android:orientation="vertical" >

        <WebView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/webviewFindmore"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbHorizontal="@drawable/scrollbarhorizontalthumb"
            android:scrollbarThumbVertical="@drawable/scrollbarvertical"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/analyticsCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="43dp"
            android:button="@drawable/checkbox_button"
            android:focusable="false"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="@string/analyticPermissionsDescription"
            android:textColor="#c2c2c2"
            android:textSize="16dp" />

        <Button
            android:id="@+id/findoutmorebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/large_back_button"
            android:minHeight="35dp"
            android:minWidth="220dp"
            android:text="@string/findoutmore"
            android:textColor="#3c3c3c"
            android:textSize="16dp"
            android:visibility="visible" />
    </LinearLayout>

    <include
        android:id="@+id/bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/bottombar" />

</RelativeLayout>