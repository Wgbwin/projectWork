<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upload_image_failed_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/boxconfirm"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="@string/fatal_upload_error"
        android:textSize="16dp"
        android:textColor="@color/result_text" />
    
    <ImageView android:id="@+id/upload_failed_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
       	android:layout_marginBottom="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/dialog_textView"
        android:layout_above="@+id/dialog_buttons_linear" />

    <LinearLayout
        android:id="@+id/dialog_buttons_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp" >

            <Button
                android:id="@+id/dialog_start_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/back_button"
                android:gravity="center"
                android:minHeight="35dp"
                android:minWidth="135dp"
                android:text="@string/start_over"
                android:textColor="#3C3C3C"
                android:textColorHighlight="#FFFFFF"
                android:textSize="16dp"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp" >

            <Button
                android:id="@+id/dialog_retry_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/back_button"
                android:gravity="center"
                android:minHeight="35dp"
                android:minWidth="135dp"
                android:text="@string/share_upload_retry"
                android:textColor="#3C3C3C"
                android:textColorHighlight="#FFFFFF"
                android:textSize="16dp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>