<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="horizontal" 
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/sideMenuBtn_lay"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#7f666666" >

        <RelativeLayout
            android:id="@+id/sideMenuHome_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_min_height"
            android:background="#00000000" >

            <ImageView
                android:id="@+id/sideMenuHome_img"
                android:layout_marginLeft="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:contentDescription="@string/Image"
                android:drawablePadding="20dp"
                android:src="@drawable/toolshomedisabled" />

            <TextView
                android:id="@+id/sideMenuHome_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/sideMenuHome_img"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:text="@string/Common_Home"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/sideMenuHomeLine_img"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/Image"
                android:background="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sideSetting_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_min_height"
            android:layout_below="@+id/sideMenuHome_lay"
            android:background="#00000000" >

            <ImageView
                android:id="@+id/sideMenuSetting_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:contentDescription="@string/Image"
                android:drawablePadding="20dp" 
                android:src="@drawable/toolssettingsdown"/>

            <TextView
                android:id="@+id/sideMenuSetting_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/sideMenuSetting_img"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/sideMenuSettingLine_img"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/Image"
               	android:background="@color/white" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/sideInfo_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_min_height"
            android:layout_below="@+id/sideSetting_lay"
            android:background="#00000000" >

            <ImageView
                android:id="@+id/sideMenuInfo_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:contentDescription="@string/Image"
                android:drawablePadding="20dp" 
                android:src="@drawable/toolsinfodown"/>

            <TextView
                android:id="@+id/sideMenuInfo_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/sideMenuInfo_img"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:text="@string/Common_Info"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/sideMenuInfoLine_img"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/Image"
               	android:background="@color/white" />
        </RelativeLayout>
        
        
         <RelativeLayout
            android:id="@+id/sideFacebook_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_min_height"
            android:layout_below="@+id/sideInfo_lay"
            android:background="#00000000" >

            <ImageView
                android:id="@+id/sideMenuFacebook_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:contentDescription="@string/Image"
                android:drawablePadding="20dp" 
                android:src="@drawable/facebook_ico"/>

            <TextView
                android:id="@+id/sideMenuFacebook_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/sideMenuFacebook_img"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:text="@string/Common_Login"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/sideMenuFacebookLine_img"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/Image"
               	android:background="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/sideMenuVersion_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/item_text"
            android:textSize="12sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/slideMenuClose_btn"
        android:layout_width="@dimen/head_min_height"
        android:layout_height="@dimen/head_min_height"
        android:background="@drawable/slidemenu_button" />

</LinearLayout>