<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="20dp"
    
    android:baselineAligned="false"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dip"
        android:text="@string/TMS_mainmenu_toptitle_text"
        android:textColor="@color/blue"
        android:textSize="@dimen/pager_padding" />

    <RelativeLayout
        android:id="@+id/printsRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/mobandr_selector_port"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/printsIV"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/Image"
            android:src="@drawable/button_prints" />

        <TextView
            android:id="@+id/printsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/printsIV"
            android:text="@string/product_prints"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="16sp" 
            android:layout_marginRight="20dp"
            android:textAllCaps="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photoproductRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/mobandr_selector_port"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/photoproductsIV"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/Image"
            android:src="@drawable/button_photoproducts" />

        <TextView
            android:id="@+id/photoproductsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/photoproductsIV"
            android:text="@string/TMS_mainmenu_photoproducts_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="16sp" 
            android:layout_marginRight="20dp"
           />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/division_line" />

    <RelativeLayout
        android:id="@+id/connectKioskRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/mobandr_selector_port"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/connectKioskIV"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/Image"
            android:src="@drawable/button_kioskconnect" />

        <TextView
            android:id="@+id/connectKioskTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/connectKioskIV"
            android:text="@string/TMS_mainmenu_kioskconnect_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="16sp" 
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tellMyStoryItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/mobandr_selector_port"
        android:padding="10dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/tellMyStoryIV"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/Image"
            android:src="@drawable/button_tellmystory" />

        <TextView
            android:id="@+id/tellMyStoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tellMyStoryIV"
            android:text="@string/TMS_mainmenu_tellmystory_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="16sp" 
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

</LinearLayout>