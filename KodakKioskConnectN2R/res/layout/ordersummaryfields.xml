<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/confirmationEmailLabelTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/orderConfirmationEmail"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/confirmationEmailTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/confirmationEmailLabelTV"
                    android:layout_marginLeft="5dp"
                    android:text="TextView"
                    android:textSize="18dp" />
                
                <LinearLayout
                    android:id="@+id/automaticUpload2AlbumsConfirmLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/confirmationEmailTV"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/WMCAutoUploadTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:focusable="false"
                        android:text="@string/share_order_confirm"
                        android:textColor="#FBBA06"
                        android:textSize="18dp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/confirmAutoUploadEmailTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:focusable="false"
                            android:text="@string/share_upload_email"
                            android:textColor="#c2c2c2"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/confirmAutoUploadEmailAccountTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:focusable="false"
                            android:text="Account"
                            android:textColor="#c2c2c2"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/confirmAutoUploadAlbumTitleTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            android:text="@string/share_upload_album"
                            android:textColor="#c2c2c2"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/confirmAutoUploadAlbumTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:focusable="false"
                            android:text="Album"
                            android:textColor="#c2c2c2"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>
                
                <TextView
                    android:id="@+id/orderIDLabelTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/automaticUpload2AlbumsConfirmLayout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/orderConfirmationID"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/orderSentLabelTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/orderIDTV"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/orderConfirmationTimeSent"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/orderSentTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/orderSentLabelTV"
                    android:layout_marginLeft="5dp"
                    android:text="TextView"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/estimatedSubtotalLabelTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/orderSentTV"
                    android:layout_marginLeft="5dp"
                    android:text="@string/orderConfirmationSubtotal"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/estimatedSubtotalTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/estimatedSubtotalLabelTV"
                    android:text="TextView"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FBBA06"
                    android:textSize="18dp" />
				<RelativeLayout 
				    android:id="@+id/LayoutPayOnStroe"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content" 
				    android:layout_below="@+id/estimatedSubtotalLabelTV"
				    android:visibility="gone">                   
	                <TextView
	                    android:id="@+id/orderSentForPickupLabelTV"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_marginLeft="5dp"
	                    android:layout_marginTop="20dp"
	                    android:text="@string/orderConfirmationStoreTitle"
	                    android:textSize="18dp" />
	
	                <TextView
	                    android:id="@+id/storeNameTV"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_below="@+id/orderSentForPickupLabelTV"
	                    android:layout_marginLeft="5dp"
	                    android:text=""
	                    android:textColor="#FBBA06"
	                    android:textSize="18dp" />
	
	                <TextView
	                    android:id="@+id/storeAddressTV"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_below="@+id/storeNameTV"
	                    android:layout_marginLeft="5dp"
	                    android:textSize="18dp" />
	
	                <TextView
	                    android:id="@+id/cityZipTV"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_below="@+id/storeAddressTV"
	                    android:layout_marginLeft="5dp"
	                    android:textSize="18dp" />
	                
	                <TextView
	                    android:id="@+id/storePhoneNumberTV"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_below="@+id/cityZipTV"
	                    android:layout_marginLeft="5dp"
	                    android:text="@string/phone"
	                    android:textSize="18dp" />
				</RelativeLayout>
				
				<RelativeLayout 
				    android:id="@+id/LayoutPayOnLine"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content" 
				    android:layout_below="@+id/LayoutPayOnStroe"
				    android:visibility="visible">                   
	                <TextView
	                    android:id="@+id/shippingAddressLabelTV"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_marginLeft="5dp"
	                    android:layout_marginTop="20dp"
	                    android:text="@string/N2RShoppingCart_ShippingInformationTitle"
	                    android:textSize="18dp" />
	
	                <TextView
	                    android:id="@+id/shipping_firstName"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_below="@+id/shippingAddressLabelTV"
	                    android:layout_marginLeft="5dp"
	                    android:text="firstName"
	                    android:textSize="18dp" />
	
	                <TextView
	                    android:id="@+id/shipping_lastName"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_below="@+id/shippingAddressLabelTV"
	                    android:layout_toRightOf="@+id/shipping_firstName"
	                    android:layout_marginLeft="5dp"
	                    android:text="lastName"
	                    android:textSize="18dp" />
	
	                <TextView
	                    android:id="@+id/shipping_addressOne"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_below="@+id/shipping_lastName"
	                    android:layout_marginLeft="5dp"
	                    android:text="addressOne"
	                    android:textSize="18dp" />
	                
	                 <TextView
	                    android:id="@+id/shipping_addressTwo"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_below="@+id/shipping_lastName"
	                    android:layout_toRightOf="@+id/shipping_addressOne"
	                    android:layout_marginLeft="5dp"
	                    android:text="addressTwo"
	                    android:textSize="18dp" />
	                 
	                <TextView
	                    android:id="@+id/shipping_city"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_below="@+id/shipping_addressTwo"
	                    android:layout_alignParentLeft="true"
	                    android:layout_marginLeft="5dp"
	                    android:text="city"
	                    android:textSize="18dp" />
	                <TextView
	                    android:id="@+id/shipping_state"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_below="@+id/shipping_addressTwo"
	                    android:layout_toRightOf="@+id/shipping_city"
	                    android:layout_marginLeft="5dp"
	                    android:text="state"
	                    android:textSize="18dp" />
	                <TextView
	                    android:id="@+id/shipping_zip"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_below="@+id/shipping_addressTwo"
	                    android:layout_toRightOf="@+id/shipping_state"
	                    android:layout_marginLeft="5dp"
	                    android:text="zip"
	                    android:textSize="18dp" />
	               
				</RelativeLayout>
				
                <TextView
                    android:id="@+id/orderDetailsLabelTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/LayoutPayOnLine"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/orderConfirmationDetails"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/orderDetailsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/orderDetailsLabelTV"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textSize="18dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </FrameLayout>

                <TextView
                    android:id="@+id/orderIDTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/orderIDLabelTV"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:textColor="#FBBA06"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/barcodeIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minHeight="100dp"
                    android:src="@drawable/placeholder"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/frameLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/orderDetailsTV"
                    android:layout_below="@+id/pricingEstimatedTV"
                    android:layout_margin="5dip"
                    android:minHeight="@dimen/map_size"
                    android:minWidth="@dimen/map_size" >

                    <com.google.android.maps.MapView
                        android:id="@+id/mapview"
           	 			android:layout_width="@dimen/map_size"
           				android:layout_height="@dimen/map_size"
                        android:apiKey="0ERGnFwrt5CA6EJJMRVn8tcn6YhFzZ4A37RvSsQ"
                        android:clickable="true"
                        android:focusable="false"
                        android:visibility="gone" >
                    </com.google.android.maps.MapView>
                </FrameLayout>

                <TextView
                    android:id="@+id/pricingEstimatedTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/barcodeIV"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="@string/order_notes"
                    android:visibility="gone"
                    android:textSize="15dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
