<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_dialog_background"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tvEnterCoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/enter_coupon"
        android:textSize="@dimen/text_size" />

    <EditText
        android:id="@+id/etCouponInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEnterCoupon"
        android:hint="@string/enter_coupon"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tvCouponStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/couponButtons"
        android:layout_below="@id/etCouponInput"
        android:gravity="center"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:id="@+id/waiting_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/couponButtons"
        android:layout_below="@id/etCouponInput"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            style="@android:style/Widget.Holo.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/couponButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/btApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="10dp"
                android:text="@string/coupon_apply"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/btDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="10dp"
                android:text="@string/done"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>