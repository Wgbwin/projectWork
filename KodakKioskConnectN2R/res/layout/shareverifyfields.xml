<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_verify_title"
        android:textColor="#FBBA06"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/share_email_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wmc_verify_email"
            android:textColor="#FBBA06"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/share_verify_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text=""
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/share_verify_album"
            android:textColor="#FBBA06"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/share_verify_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>