<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectionbar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bottombarbackground"
    android:minHeight="35dp" >

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:background="@drawable/settings_button"
        android:minHeight="35dp"
        android:minWidth="35dp"
        android:text="" />

    <Button
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/information_button"
        android:minHeight="35dp"
        android:minWidth="35dp"
        android:text="" />

    <Button
        android:id="@+id/ibTrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/infoButton"
        android:background="@drawable/toolsdeletesmalldisabled"
        android:visibility="gone" /> 
        
     <TextView
        android:id="@+id/tv_enter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/infoButton"
        android:text="@string/enter_title"
        android:gravity="center"
        android:visibility="gone" /> 

    <TextView
        android:id="@+id/tvArrange"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/settingsButton"
        android:layout_alignTop="@+id/settingsButton"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/settingsButton"
        android:gravity="center"
        android:text="@string/tv_arrange"
        android:visibility="invisible" />

</RelativeLayout>