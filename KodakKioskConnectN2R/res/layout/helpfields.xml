<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fieldsbackground" >

    <WebView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarThumbHorizontal="@drawable/scrollbarhorizontalthumb"
        android:scrollbarThumbVertical="@drawable/scrollbarvertical"
        android:visibility="invisible"/>
    
     <TextView
            android:id="@+id/eulainstructionsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:text="@string/eulainstructions"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#c2c2c2"
            android:textSize="18sp"
/>

        <Button
            android:id="@+id/eulaReadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/large_back_button"
            android:textColorHighlight="#FFFFFF"
            android:textColor="#3c3c3c"
            android:minHeight="35dp"
            android:minWidth="220dp"
            android:text="@string/eulabutton"
            android:textSize="16dp"
/>
        <TextView android:id="@+id/copyrightsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="@string/mainMenuCopyright"
            android:textColor="#c2c2c2"
            android:textSize="14sp"
            android:visibility="invisible"/>

               

</RelativeLayout>